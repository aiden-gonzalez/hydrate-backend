{
  "name": "hydrate-backend",
  "version": "1.0.0",
  "description": "Backend for hydRate application",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc",
    "test": "tsc && sudo docker compose -f mongo-docker-compose.yml up -d && mocha --recursive --exit",
    "start_local": "tsc && sudo docker compose -f mongo-docker-compose.yml up -d && export MONGO_ENV=local && node dist/server.js",
    "start_cloud": "tsc && export MONGO_ENV=cloud && node dist/server.js",
    "lint": "eslint .",
    "lint_fix": "eslint --fix .",
    "generate_schema": "npx openapi-typescript ./hydRate.json -o ./schema.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/awesomeaiden/hydrate-backend.git"
  },
  "author": "Aiden Gonzalez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/awesomeaiden/hydrate-backend/issues"
  },
  "homepage": "https://github.com/awesomeaiden/hydrate-backend#readme",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.1",
    "express-openapi-validator": "^5.0.4",
    "express-validator": "^6.14.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.1",
    "uuid": "^9.0.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/mocha": "^10.0.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "mocha": "^10.2.0",
    "openapi-typescript": "^6.5.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4"
  }
}
